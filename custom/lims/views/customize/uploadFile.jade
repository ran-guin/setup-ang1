// standard input variables: 

form(role='form' method = 'post' action="/uploadFile" enctype="multipart/form-data") 
  input(type = 'hidden' name='Samples' value='{{ Samples }}')
  input(type='hidden' id = 'id' name='plate_ids' value="{{plate_ids}}")

  table.table
    tr
      td(style='width:8%')
        i.fa.fa-4x.fa-upload
      td(style='width:30%')
        h3 Upload Data              
      td(style='width:40%; vertical-align:middle' )
        span(style='width:100%')
            input.btn.btn-lg.btn-default(type = 'file' ng-model='file' name='uploadFile' style='display:inline-block')
      td(style='width:22%; vertical-align:middle')   
        button.btn.btn-lg.btn-success.form-control.input-lg(type='submit', ng-click='get_headers()') Upload
