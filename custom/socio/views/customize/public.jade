extends publicLayout
block content
  body(ng-app='SignupModule', ng-controller='SignupController', ng-cloak='')
    .container-fluid
      // Creates the navbar
      nav.navbar.navbar-default.navbar-inverse
        // This creates the mechanism for collapse button
        button.navbar-toggle(type='button', data-toggle='collapse', ng-init='navCollapsed = true', ng-click='navCollapsed = !navCollapsed')
          // This controls the number of lines in the image when the nav collapse
          span.icon-bar
          span.icon-bar
          span.icon-bar
        // This is the brand on the left-hand side.
        a.navbar-brand(href='/#')  Template 
        .collapse.navbar-collapse(ng-class="!navCollapsed && 'in'")
          form.navbar-form.navbar-right(ng-submit='submitLoginForm()')
            .form-group
              input.form-control(ng-model='loginForm.email', type='text', placeholder='Email', name='email')
            .form-group
              input.form-control(ng-model='loginForm.password', type='password', placeholder='Password', name='password')
            button.btn.btn-success(type='submit')
              span(ng-show='!loginForm.loading') Sign in
              span.fa.fa-spinner(ng-show='loginForm.loading')
              span(ng-show='loginForm.loading') Signing in...
           
    .col-md-8.col-md-offset-2
      if message
        .alert.alert-danger 
          i.fa.fa-warning 
          b &nbsp; #{message}
      if ! message
        .alert.alert-danger no message
      .jumbotron(style='padding:50px')
        h1 Template
        h3 Demo Version:
        a.btn.btn-lg.btn-success(href='/signup') Sign up now!
        hr
        a.btn.btn-lg.btn-success(href="/demo/patient") Sample Patient Interface
        span &nbsp;
        a.btn.btn-lg.btn-warning(href="/demo/clinic") Sample Clinic Reception Interface
        span &nbsp;
        a.btn.btn-lg.btn-danger(href="/demo/appointment") Sample Clinic Treatment Interface
        span &nbsp;
        a.btn.btn-lg.btn-primary(href="/demo/research") Sample Research Interface
       

