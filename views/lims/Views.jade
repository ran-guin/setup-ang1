extends ./../customize/privateLayout
block content

  div.container
    p &nbsp;
    a(href="/Views/new")
      button.btn.btn-primary(type='button') Add New View   

    h3 List of Current Views:

    div.container
       div(ng-app='myApp' ng-cloak=1)
        div(ng-controller="SharedController")
          input(type='checkbox' ng-model="include_all")
          b &nbsp; Include inactive views
          p &nbsp;

          each view,i in views
            - id = view.id;
            - name = view.name;
            - desc = view.description;

            - colour = 'red'
            if status === 'Active'
              - colour = 'blue'

            li(ng-show="include_all || '#{status}' == 'Active'") 
              a(href="/Views/view/#{id}")
                b(style='color: #{colour}') #{name}
              span &nbsp; &nbsp; [ for &nbsp;
              b #{desc} 



      
