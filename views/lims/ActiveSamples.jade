div.section-block.bg-info
    span Active Samples: 
    b {{N}} x 
    b(style='color:red') {{sample_type}} 
    b in {{container_format}}
    span &nbsp;

    button.btn.btn-primary.btn-sm(type='button' ng-show="!injectedAlready()" ng-click="injectData('/Container/summary','', plate_ids)") ?
    button.btn.btn-danger.btn-sm(type='button' ng-show='injectedAlready()' ng-click='uninjectData()') x    

    span.navbar.navbar-right 

      button.btn.btn-primary.btn-sm(type='button' ng-show="include_parents && !injectedAlready('injectedHistory')" ng-click="injectData('/Container/history?include_parents=1','injectedHistory', plate_ids)") Long History
      button.btn.btn-primary.btn-sm(type='button' ng-show="!include_parents && !injectedAlready('injectedHistory')" ng-click="injectData('/Container/history','injectedHistory', plate_ids)") Short History
      span &nbsp;
      input(type='checkbox' label='include Parent' ng-model='include_parents') 
      span &nbsp; include parents &nbsp; &nbsp; 
      button.btn.btn-danger.btn-sm(type='button' ng-show="injectedAlready('injectedHistory')" ng-click="uninjectData('injectedHistory')") x    
      span &nbsp; &nbsp; &nbsp; &nbsp;

      b {{user}} &nbsp;
      span {{ timestamp }} &nbsp; &nbsp;

    div(ng-show="Samples && Samples[0] && Samples[0].last_step")
      hr
      u Progress: 
      b {{Samples[0].last_protocol}} [ {{Samples[0].protocol_status}} ] &nbsp; &nbsp;
       
      span (completed '{{Samples[0].last_step}}')  


