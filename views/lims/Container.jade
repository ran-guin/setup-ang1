extends ./../customize/privateLayout
block content

  .header
    h1(id="main-title" class="container") Sample Home Page 
  div.container
     div(ng-app='myApp')
      div(ng-controller="CommonController")

        h3 Current Samples: 
          b #{samples.length} x #{samples[0].sample_type} sample [ #{samples[0].format} ]
        // *** Generate Dropdown for ENUM Values *** //
        hr
        b IDS: #{ids}
        b Continue Protocol: 
        form(role='form' method='post' action="/Lab_protocol/run" enctype='form-data')
          input(type='hidden' id='Plate_ID' name='Plate_ID' value='#{ids}')
          span.lookup(id='Lookup-Lab_Protocol' ng-init="loadLookup('Lab_Protocol', 'Lab_Protocol_ID', 'Lab_Protocol_Name')") &nbsp;
          button.btn.btn-primary(type='submit') Run Protocol

        hr
        b Transfer To: 
        b #{sampleList.join(',')}
        form(role='form' method = 'post' action= "/xfer")

          input(id = 'id' type='hidden' value="#{sampleList.join(',')}")
          span.dropdown
              button.btn.btn-default.dropdown-toggle(type='button' data-toggle='dropdown' id = 'Container_Format') Target Format &nbsp;
                  span.caret
              ul.dropdown-menu
                  each format in target_formats
                      li 
                          a(href='#' onclick='return false;') #{format.name} 
          span &nbsp;
          button.btn.btn-primary(type='submit') Transfer Samples
