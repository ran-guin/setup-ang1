extends ./../layout
block content
  .container
    form
        h2 Data Record... 

        - var debug = 0;
        hr
        table.table
            thead
                tr.alert.alert-info
                    th Vaccine
                    th Administered
                    th Expiry
                    th Reaction
                    th Notes
                tr(ng-repeat = "record in recordData") 
                    td
                        b {{record.vaccine}}
                    td
                        b {{record.date}}
                    td
                        b {{record.expiry}}
                    td
                        b {{record.reactionLevel}}
                    td
                        b {{record.reactionNotes}}


