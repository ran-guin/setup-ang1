title BC Generations

- var colour = '#ddd';

if session && session.payload && session.payload.db && sails && sails.config && sails.config.connections && sails.config.connections.productionDB && sails.config.connections.productionDB !== session.payload.db
	- colour = '#f44'

.mini-header(style='background-color:#344')
	h2(style='color:#{colour}') 
		a(href='/home')
			i.fa.fa-home(style='color:#{colour}') &nbsp; &nbsp; &nbsp;
		span BC Generations
		div.navbar-right
			include searchBox
				if session && session.payload
					span #{session.payload.user} &nbsp;  &nbsp; &nbsp;
				a(href='#' onclick="return false;" data-toggle='modal' data-target='#userMenu')
					i.fa.fa-bars(style='color:#{colour}')

include userMenu.jade

