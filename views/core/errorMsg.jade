if message || sails.config.message
  // p &nbsp;
  div.alert.alert-success
    strong
      if message
        i.fa.fa-check
        span &nbsp; 
        span #{message}
      each msg in sails.config.messages
        br
        i.fa.fa-check
        span &nbsp; 
        b #{msg}
        span.navbar-right 

    a(href="#" onclick="return false;" class="close" data-dismiss="alert" aria-label="close") &times;
    
if errors || errorMsg || sails.config.errorMsg
  div.alert.alert-danger
    i.fa.fa-warning 
    strong &nbsp; Error: &nbsp;
      span #{errorMsg}
      b #{sails.config.errorMsg}
      if errors
        ul
          each err in errors
            li #{err}
    a(href="#" class="close" data-dismiss="alert" aria-label="close") &times;

if warnings || warningMsg || sails.config.warningMsg
  div.alert.alert-warning
    i.fa.fa-warning 
    strong 
        span.text-danger &nbsp; Warning:
        span &nbsp;
      span #{warningMsg}
      b #{sails.config.warningMsg}
      if warnings
        ul
          each warning in warnings
            li #{warning}
    a(href="#" class="close" data-dismiss="alert" aria-label="close") &times;