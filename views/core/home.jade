extends publicLayout
block content
  .default-page
      .header
        h1#main-title.container Custom_Title
         
      .main.container.clearfix
        h2  Welcome to the Custom_Title
               
        ul.getting-started
          li.clearfix
            .step
              .sprite.one
              
              h3 Search Page : #{message}
              br            
              form(role='form' method='post' action="/scan-barcode")       
                div.form-group
                  label(for='barcode') Scan Barcode
                  input.form-control(type='text' placeholder='-- Scan Barcode Here --' id='barcode' name='barcode')
                button.btn.btn-default(type=submit) Submit

          li.clearfix
            .step
              .sprite.two
                                 
              h3 Custom_Section_2
              br 
              h4 Section 2 summary
              br      
              a(href='/custom_section_2')
                button.btn.btn-primary Go to section 2 
          
          li.clearfix
            .step
              .sprite.three
                                 
              h3 Custom_Section_3
                                 
              b  About section 3

        // If link section to the right include line below (and adjust Links.jade file as required) //
        include Links
