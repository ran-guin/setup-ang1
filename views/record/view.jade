extends ./../customize/privateLayout
block content
  div.container
    form
        h2 {table} Record(s)
        h4 ID: #{id} 
            a(href="/record/edit/#{table}/#{id}") Edit

        - var debug = 0;

        hr
        table.table.table-bordered
            thead
                tr
                    th.alert.alert-info Field
                    th.alert.alert-info Value

                each record in data
                    each fld in fields
                        tr
                            td
                                b #{ fld }
                            td
                                b #{ record[fld] }
                            //td
                                a(href='#')
                                    button(type='button') Edit
